---
import ProjectInfoItem from "./ProjectInfoItem.astro";

const {isUnidades=true, unit, supCub, supSemi, supTotal, planta, plataMobile, plantaAlt, variant ="a", figPosition=""} = Astro.props

const className = {
  a: {
    ul: "col-span-12 md:col-span-5 lg:col-span-4",
    fig: "col-span-12 md:col-span-7 lg:col-span-8"
  },
  b: {
    ul: "col-span-12 md:justify-self-center 2xl:col-span-6",
    fig: "col-span-12 2xl:col-span-6"
  },
  c: {
    ul: "col-span-12 md:justify-self-center 2xl:col-span-6 2xl:order-2",
    fig: "col-span-12 2xl:col-span-6 2xl:order-1"
  }
}
---

<div class="grid grid-cols-12 gap-4">
  <ul class=`${className[variant].ul} grid content-center`>
    <h4
      class="text-[30px] lg:text-[34px] xl:text-[41px] font-black text-stone-700 pb-4"
    >
      {isUnidades? "UNIDADES" : "UNIDAD"} <span class="font-poppins">{unit}</span>
    </h4>
    <ProjectInfoItem value={supCub} variant="b">
      <Fragment slot="text">
        <span class="whitespace-nowrap">m<sup>2</sup> de sup</span> cubierta
      </Fragment>
    </ProjectInfoItem>
    <ProjectInfoItem value={supSemi} variant="b">
      <Fragment slot="text">
        <span class="whitespace-nowrap">m<sup>2</sup> de sup</span> semicubierta
      </Fragment>
    </ProjectInfoItem>
    <ProjectInfoItem value={supTotal} variant="b">
      <Fragment slot="text">
        <span class="whitespace-nowrap">m<sup>2</sup> de sup</span> total
      </Fragment>
    </ProjectInfoItem>
  </ul>
  <figure
    class=`relative ${className[variant].fig} grid justify-center ${figPosition}`
  >
    <picture>
      <source srcset={plataMobile.src} media="(max-width: 768px)" />
      <img
        class="max-h-[350px] md:max-h-[540px] 2xl:max-h-[720px]"
        src={planta.src}
        alt={plantaAlt}
        loading="lazy"
      />
    </picture>
  </figure>
</div>
