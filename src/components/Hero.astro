---
import croquis from '../assets/croquis.jpg';
---

<section id="hero" class="w-full px-2 md:px-10 pt-20 pb-20">
  <h1 class="vhn">Paroissien 4646 | Desarrollo Inmobiliario</h1>
  <div class="flex flex-wrap md:flex-nowrap justify-center gap-6 lg:gap-10 xl:gap-20">
    <div class="">
      <p class="block prs leading-none text-white font-black w-min text-[86px] lg:text-[126px] xl:text-[160px] 2xl:text-[200px]">
        <span class="stone">P</span>A <span class="stone">R</span>OI <span class="stone">S</span>SIEN
      </p>
      <h2 class="font-thin uppercase text-[21px] lg:text-[29px] xl:text-4xl 2xl:text-5xl">DesarrolloÂ inmobiliario</h2> 
    </div>
    <figure id="croquis" class="self-center relative">
      <img class="relative top-[-10px] lg:top-[-34px] xl:top-[-24px] object-contain w-[300px] lg:w-[500px] xl:w-[600px] 2xl:w-[720px]" src={croquis.src} alt="Croquis del proyexcto inmobiliario Paroissien 4646" fetchpriority="high" />
    </figure>
  </div>
